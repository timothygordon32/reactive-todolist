# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

# Security
POST        /login                   controllers.Authenticator.login
GET         /username                controllers.Authenticator.getUsername

# Tasks
POST        /tasks              controllers.Tasks.create
GET         /tasks              controllers.Tasks.list
GET         /tasks/:id          controllers.Tasks.get(id: String)
DELETE      /tasks/:id          controllers.Tasks.delete(id: String)

# User tasks
POST        /user/tasks         controllers.UserTasks.create
GET         /user/tasks         controllers.UserTasks.list
#GET         /user/tasks/:id     controllers.UserTasks.get(id: String)
DELETE      /user/tasks/:id     controllers.UserTasks.delete(id: String)
