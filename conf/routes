# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

# Angular
GET         /app                     controllers.Angular.tasks

# Security
GET         /login                   controllers.Application.login(username: Option[String])
GET         /hello                   controllers.Application.hello

# Tasks
GET         /tasks                   controllers.Application.tasks
POST        /tasks                   controllers.Application.newTask
POST        /tasks/:id/delete        controllers.Application.deleteTask(id: String)

GET         /json/tasks              controllers.Application.list
POST        /json/tasks              controllers.Application.createTask
GET         /json/tasks/:id          controllers.Application.getTask(id: String)
POST        /json/tasks/echo         controllers.Application.echo
DELETE      /json/tasks/:id          controllers.Application.deleteTaskJson(id: String)
