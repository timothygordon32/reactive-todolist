# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

# Angular
GET         /app                     controllers.Application.tasks

# Security
GET         /username                controllers.Application.getUsername
POST        /login                   controllers.Application.login

# Tasks
GET         /json/tasks              controllers.Application.list
POST        /json/tasks              controllers.Application.createTask
GET         /json/tasks/:id          controllers.Application.getTask(id: String)
DELETE      /json/tasks/:id          controllers.Application.deleteTaskJson(id: String)
