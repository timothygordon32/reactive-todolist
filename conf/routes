# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

# Security
POST        /login                   controllers.Authenticator.login
GET         /username                controllers.Authenticator.getUsername

# Tasks
POST        /json/tasks              controllers.Tasks.create
GET         /json/tasks              controllers.Tasks.list
GET         /json/tasks/:id          controllers.Tasks.get(id: String)
DELETE      /json/tasks/:id          controllers.Tasks.delete(id: String)
