# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)

# Security
POST        /login                   controllers.Authenticator.login
GET         /username                controllers.Authenticator.getUsername

# Tasks
POST        /tasks              controllers.UserTasks.create
GET         /tasks              controllers.UserTasks.list
GET         /tasks/:id          controllers.UserTasks.get(id: String)
DELETE      /tasks/:id          controllers.UserTasks.delete(id: String)
